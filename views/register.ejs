<body>
    <main>

        <nav>
            <a href="/">Home</a>
            <a href="/login">Login</a> 
        </nav>

        <h2><img src="/images/137588392545fb5d22845c5ed4efad73.png"/>Register</h2>

        <form action="/register" method="POST">
            <div class="form-group">
                <span class="category"><label for="name">Name:</label></span>
                <input type="text" name='name'/>
            </div>
            <div class="form-group">
                <span class="category"><label for="email">Email:</label></span>
                <input type="email" name="email" required/>
            </div>
            <div class="form-group">
                <span class="category"><label for="password">Password:</label></span>
                <input type="password" name="password" required/>
            </div>
            <button type="submit">Submit</button>
        </form>
    </main>

    <footer></footer>
