    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/ae6121708a.js" crossorigin="anonymous"></script>
    <title>Pets4U</title>
</head>
<body>

    <header>
        <nav>
            <a href="/">Home</a>
            <a href="/register">Sign Up</a>
            <a href="/login">Login</a> 
            <a href="/pets">Available Pets</a>
            <a href="/locations">Search By Location</a>
            <a href="/pets/new">New Pet</a>
        </nav>
    </header>

    <main>
        <h1>Locations</h1>

        <section class='locations-list container'> 
            <div class="row">
                <div class="col-sm">
                    <% for (let i = 0; i < locations.length; i++) { %>
                    <ul><span class="state"><img src="/images/137588392545fb5d22845c5ed4efad73.png"/><%= locations[i].state %> </span> 

                    <% for (let j = 0; j < (locations[i].city).length; j++) { %>

                    <li><span class="city"><a href="locations/<%= locations[i].city[j] %>"> <%= locations[i].city[j] %> </a></span></li>
                    <% } %>
                </ul>
                <% } %>
            </div>
            <div class="col-sm"> 
                <img class="map" src="/images/petplaces.jpg"/>
            </div>
        </div>
        </section>
    </main>

    <footer><div class="copyright">Copyright &copy; <script>document.write(new Date().getFullYear())</script> Ally Pittman & Nate Daniels </div>
        <div class="social">
        <a href="https://www.facebook.com"><i class="fab fa-facebook"></i></a>
        <a href="https://wwww.instagram.com"><i class="fab fa-instagram"></i></a>
        <a href="https://www.twitter.com"><i class="fab fa-twitter"></i></a>
      </div>
 
       </footer>

</body>
</html>