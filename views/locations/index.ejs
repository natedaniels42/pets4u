     <script defer src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script> 
 
    <title>Pets4U</title>
</head>
<body>

    <header>
        <nav>
            <a href="/">Home</a>
            <a href="/pets">Available Pets</a>
            <a href="/locations">Search By Location</a>
            <a href="/pets/new">New Pet</a>
        </nav>
    </header>

    <main>
        <h1>Locations</h1>

        <section class='locations-list'> 
            
         <% for (let i = 0; i < locations.length; i++) { %>
           <ul><span class="state"><img src="/images/137588392545fb5d22845c5ed4efad73.png"/><%= locations[i].state %> </span> 

                <% for (let j = 0; j < (locations[i].city).length; j++) { %>

                <li><span class="city"><a href="locations/<%= locations[i].city[j] %>"> <%= locations[i].city[j] %> </a></span></li>

                <% } %>

            </ul>
        <% } %>
        </section>
    </main>

    <footer>Copyright &copy; <script>document.write(new Date().getFullYear())</script> Ally Pittman & Nate Daniels </footer>

</body>
</html>